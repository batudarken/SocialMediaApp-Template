<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Geri Butonu -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_blue" />

        <!-- E-posta İkonu -->
        <ImageView
            android:id="@+id/iv_email_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/circle_background_light"
            android:contentDescription="@string/email_verification"
            android:padding="32dp"
            android:src="@drawable/ic_email_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            app:tint="@color/primary_blue" />

        <!-- Başlık -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/verify_email"
            android:textColor="@color/primary_blue"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_email_icon" />

        <!-- Alt Başlık -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/verification_message"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <!-- E-posta Adresi Gösterimi -->
        <TextView
            android:id="@+id/tv_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="user@example.com"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle" />

        <!-- Doğrulama Kodu Girişleri -->
        <LinearLayout
            android:id="@+id/ll_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email_address">

            <EditText
                android:id="@+id/et_code_1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_code_2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_code_3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_code_4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_code_5"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_code_6"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="@drawable/verification_code_background"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:importantForAutofill="no" />

        </LinearLayout>

        <!-- Hata Mesajı -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/invalid_code"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_verification_code" />

        <!-- Doğrula Butonu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/primary_blue"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/verify"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_error" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@android:color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/btn_verify"
            app:layout_constraintEnd_toEndOf="@+id/btn_verify"
            app:layout_constraintStart_toStartOf="@+id/btn_verify"
            app:layout_constraintTop_toTopOf="@+id/btn_verify" />

        <!-- Tekrar Gönder Bölümü -->
        <LinearLayout
            android:id="@+id/ll_resend_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/didnt_receive_code"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:padding="8dp"
                android:text="@string/resend"
                android:textColor="@color/primary_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Geri Sayım -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/resend_in_seconds"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_resend_section" />

        <!-- Başarı Mesajı -->
        <LinearLayout
            android:id="@+id/ll_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_countdown">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@android:color/holo_green_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/verification_successful"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Alt Boşluk -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_success" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

