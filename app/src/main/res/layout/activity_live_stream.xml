<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview Container -->
    <FrameLayout
        android:id="@+id/fl_camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Placeholder for camera preview -->
        <ImageView
            android:id="@+id/iv_camera_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_preview_placeholder" />

        <!-- Live Stream Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/live_stream_overlay" />

    </FrameLayout>

    <!-- Top Controls -->
    <LinearLayout
        android:id="@+id/ll_top_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background_dark_transparent"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Switch Camera -->
        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background_dark_transparent"
            android:contentDescription="@string/switch_camera"
            android:src="@drawable/ic_switch_camera"
            app:tint="@android:color/white" />

        <!-- Settings -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background_dark_transparent"
            android:contentDescription="@string/stream_settings"
            android:src="@drawable/ic_settings"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Live Status Indicator -->
    <LinearLayout
        android:id="@+id/ll_live_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/live_status_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_top_controls">

        <!-- Live Dot -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/live_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/live"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Viewer Count -->
        <TextView
            android:id="@+id/tv_viewer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_visibility"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Comments Section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comments"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_controls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/ll_bottom_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Comment Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_comment"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:hint="@string/add_comment"
            app:boxBackgroundColor="@color/comment_input_background"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text|textCapSentences"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textColorHint="@color/comment_hint_color"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Send Comment Button -->
        <ImageButton
            android:id="@+id/btn_send_comment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background_blue"
            android:contentDescription="@string/send_comment"
            android:src="@drawable/ic_send"
            app:tint="@android:color/white" />

        <!-- Effects Button -->
        <ImageButton
            android:id="@+id/btn_effects"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background_dark_transparent"
            android:contentDescription="@string/effects"
            android:src="@drawable/ic_auto_awesome"
            app:tint="@android:color/white" />

        <!-- End Stream Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_end_stream"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/live_red"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/end_stream"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <!-- Start Stream Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_stream"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/live_red"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/go_live"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_live_tv"
            app:iconGravity="textStart"
            app:iconSize="16dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>

    <!-- Stream Preview Overlay (before going live) -->
    <LinearLayout
        android:id="@+id/ll_preview_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Live Stream Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle_background_red"
            android:padding="20dp"
            android:src="@drawable/ic_live_tv"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/ready_to_go_live"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Description -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="@string/live_stream_description"
            android:textColor="@color/text_light_secondary"
            android:textSize="16sp" />

        <!-- Stream Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_stream_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/stream_title"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_stream_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text|textCapSentences"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Go Live Button (Large) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_go_live_large"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/live_red"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/go_live"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_live_tv"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/overlay_dark"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/starting_live_stream"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

